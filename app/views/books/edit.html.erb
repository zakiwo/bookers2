<%= render 'layouts/error_messages', model:@book %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book,local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title,class:"form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body,class:"form-control book_body" %>
        </div>
        <div class="form-group">
          <label for="book_category">Category</label>
          <%= f.text_area :category,class:"form-control book_category" %>
        </div>
        <div class="form-group book_evaluation" data-score="<%= @book.evaluation %>">
          <label for="book_evaluation">Evaluation</label>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book',class:"btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show",book_path(@book) %>
       |
      <%= link_to "Back",books_path %>
    </div>
  </div>
</div>

<script>
    $('.book_evaluation').raty({
    readOnly: true,
    srore: function(){
      return $(this).attr('data-score');
    },
    path: '/assets/'
    });
  </script>