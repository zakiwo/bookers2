<%= render 'users/list',user:@user %>

<h1>New book</h1>
<%= form_with model:@new_book,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h1>Book detail</h1>
  <p><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %></p>
  <div><%= @book.user.name %></div>
  <div>title:<%= @book.title %></div>
  <div>body:<%= @book.body %></div>
  <% if @book.user_id == current_user.id %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book),method: :delete, "data-confirm" => "本当に消してもいいの？" %>
  <% end %>