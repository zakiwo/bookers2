<%= render 'layouts/error_messages',model: @comment %>

<div class="container">
  <div class="row">
    <%= render 'users/list',user:@user,new_book:@new_book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= link_to attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg"), user_path(@book.user) %></td>
              <td><%= link_to @book.user.name, user_path(@book.user) %></td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.body %></td>
              <%= render 'books/favorites', book: @book %>
              <% if @book.user_id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book),class:"btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book),class:"btn btn-sm btn-danger",method: :delete, "data-confirm" => "本当に消してもいいの？" %></td>
              <% end %>
              <td>コメント数：<%= @book.book_comments.count %></td>
            </tr>
          </tbody>
        </table>

      <h2>Comments</h2>
        <table class="table">
          <tbody>
            <% @book.book_comments.each do |book_comment| %>
              <tr>
                <td><%= link_to attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg"), user_path(book_comment.user) %></td>
                <td><%= link_to book_comment.user.name, user_path(book_comment.user) %></td>
                <td><%= book_comment.comment %></td>
                <% if current_user.id == book_comment.user_id %>
                  <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete,class:"btn btn-sm btn-danger" %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="new-comments">
          <%= form_with(model:[@book, @comment], local: true) do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, size: "60 x 5", placeholder:"コメントをここに" %>
          </div>
          <div class="form-group">
            <%= f.submit "送信" %>
          </div>
          <% end %>
        </div>
      </div>
  </div>
</div>