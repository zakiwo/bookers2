<% if @book.errors.any? %>
  <p><%= @book.errors.count %>errors phohibited this obj from being saved</p>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<%= render 'users/list',user:@user %>

<h1>New book</h1>
<%= form_with model:@new_book,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h1>Books</h1>
<% @books.each do |book| %>
  <p><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %></p>
  <p><%= link_to book.title, book_path(book) %></p>
  <p><%= book.body %></p>
<% end %>