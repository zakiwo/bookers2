<table class="table">
  <tbody>
    <% book.book_comments.each do |book_comment| %>
    <tr>
      <td><%= link_to attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg"), user_path(book_comment.user) %></td>
      <td><%= link_to book_comment.user.name, user_path(book_comment.user) %></td>
      <td><%= book_comment.comment %></td>
      <% if current_user.id == book_comment.user_id %>
        <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class:"btn btn-sm btn-danger" %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>






