<%= render 'users/list', user:@user %>

<h1>New book</h1>
<%= form_with model:@new_book,url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<% @users.each do |user| %>
  <p>image</p>
  <p><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %></p>
  <p>name</p>
  <p><%= user.name %></p>
  <p><%= link_to "Show", user_path(user) %></p>
<% end %>