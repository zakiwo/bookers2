<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h1>Event Mail</h1>
      <%= form_with url:group_send_mail_path(@group), method: :get, local:true do |f| %>
      <div class="form-group">
        <label for="group-name">Title</label>
        <%= f.text_field :title,class:"form-control group-name" %>
      </div>
      <div class="form-group">
        <label for="group-introduction">Content</label>
        <%= f.text_area :body ,class:"form-control group-introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Send Email',class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>