<%= render 'layouts/error_messages', model: @group %>

<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h1>Create Group</h1>
      <%= form_with model:@group,local:true do |f| %>
      <div class="form-group">
        <label for="group-name">グループ名</label>
        <%= f.text_field :name,class:"form-control group-name" %>
      </div>
      <div class="form-group">
        <label for="group-introduction">紹介文</label>
        <%= f.text_area :introduction ,class:"form-control group-introduction" %>
      </div>
      <div class="form-group">
        <label for="inputImage">グループ画像</label>
        <%= f.attachment_field:image,class:"form-control-file image",placeholder:"グループ画像" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Group',class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>