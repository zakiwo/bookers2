<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: current_user, new_book: @new_book %>
    </div>
    <div class="col-md-9">
      <h2>Group Detail</h2>
      <table class="table">
        <tr>
          <td></td>
          <td><%= @group.name %></td>
          <td><%= @group.introduction %></td>
          <% if @group.owner_id == current_user.id %>
            <td><%= link_to "Edit", edit_group_path(@group) %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>